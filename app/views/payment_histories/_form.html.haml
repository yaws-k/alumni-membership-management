= form_with(model: @attendance, url: path) do |f|
  = render 'layouts/form_errors', model: f.object
  = f.hidden_field :member_id
  .mb-4
    支払い区分
    %br
    = f.select(:event_id, @payments, {}, class: 'select')
  .mb-4
    入金日
    %br
    = f.date_field(:payment_date, class: 'input')
  .mb-4
    金額
    %br
    = f.text_field(:amount, class: 'input')
  .mb-4
    備考
    %br
    = f.text_area(:note, cols: 80, class: 'textarea')
  = f.submit '送信', class: 'btn btn-primary'
